  <script type="text/javascript">
  	obj ={
  		xhr:new XMLHttpRequest(),
  		checkpass: function ()
  		{
  			usn = document.getElementById("name");
  			pass=document.getElementById("pass");
	
			obj.xhr = new XMLHttpRequest();
		
			obj.xhr.onreadystatechange = obj.checkres;
	
			obj.xhr.open("GET", "http://localhost/WT2/shynafolder/landing-zero/checkpass.php?usn=" + usn.value+"&pass="+pass.value, true);
	
			obj.xhr.send();


  		},
  		checkres: function ()
  		{
  			if ( obj.xhr.readyState==4 && obj.xhr.status==200)
  			{
                sp= document.getElementById("sp");
  				sp.innerHTML=obj.xhr.responseText;
                

                    if (obj.xhr.responseText=="Wrong Password or UserName")
                    {
                        
                        sp.style.color="red";
                        sp.style.fontStyle="italic";
                        sp.innerHTML=obj.xhr.responseText;

                    }
                    else if (obj.xhr.responseText=="User logging in")
                    {
                        
                        sp.style.color="green";
                        sp.style.fontStyle="italic";
                        sp.innerHTML=obj.xhr.responseText;
                        document.location.href = 'feeds2.html';

                    }
  			}
  		},
		setCookie : function() 
		{
			console.log("remove cookies");
			    var cookies = document.cookie.split(";");

				for (var i = 0; i < cookies.length; i++) {
					var cookie = cookies[i];
					var eqPos = cookie.indexOf("=");
					var name = eqPos > -1 ? cookie.substr(0, eqPos) : cookie;
					document.cookie = name + "=;expires=Thu, 01 Jan 1970 00:00:00 GMT";
					}
			console.log("setting cookie");
			d = new Date();
			exdays = 30;
			cvalue = document.getElementById("name").value;
			d.setTime(d.getTime() + (exdays*24*60*60*1000));
			expires = "expires=" + d.toGMTString();
			document.cookie = "username" + "=" + cvalue + ";" + expires + ";path=/";
			console.log("setcookie fired");
			obj.getCookie("username");

		},
		 getCookie : function(cname) {
			//document.cookie = name + "=;expires=Thu, 01 Jan 1970 00:00:00 GMT";
            var name = cname + "=";
            var ca = document.cookie.split(';');
            for(var i = 0; i < ca.length; i++) {
                var c = ca[i];
                while (c.charAt(0) == ' ') {
                    c = c.substring(1);
                }
                if (c.indexOf(name) == 0) {
                    console.log(c.substring(name.length, c.length));
                }
            }
            //console.log("fuckedup");
        }

  	}

  </script>
